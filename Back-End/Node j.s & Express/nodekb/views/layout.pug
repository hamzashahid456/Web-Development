doctype html
html
  head
    title Knowledgebase
    link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet' href='/css/style.css')
  body
    nav.navbar.navbar-expand-lg.bg-dark.navbar-dark
      .container-fluid
        .navbar-header
          button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
            span.sr-only Toogle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Knowledgebase
        #navbarNav.collapse.navbar-collapse
          ul.nav.navbar-nav 
            li
              a.nav-link(href='/') Home
            if user
              li
                a.nav-link(href='/articles/add') Add Articles 
              li 
                a.nav-link(href='/users/logout') Logout
            else
              ul.nav.navbar-nav.navbar-right
                li
                  a.nav-link(href='/users/register') Register user
                li
                  a.nav-link(href='/users/login') Login 

    .container
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      
      block content
      br
      hr
      footer
        p Copyright &copy;2017
    
    script(src='/bower_components/jquery/dist/jquery.js')    
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
    script(src='/js/main.js')
    
    
    
